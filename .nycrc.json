{
    "extends": "@istanbuljs/nyc-config-typescript",
    "all": true,
    "check-coverage": false,
    "reporter": ["text", "text-summary", "html", "lcov"],
    "report-dir": "coverage",
    "include": ["src/**/*.ts"],
    "exclude": ["src/**/*.d.ts", "src/server.ts"],
    "sourceMap": true,
    "instrument": true,
    "produce-source-map": true
}
